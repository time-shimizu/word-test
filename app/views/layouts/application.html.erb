<!DOCTYPE html>
<html>
  <head>
    <title>WordTest</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
    <div class="container">
      <% flash.each do |message_type, msg|%>
        <div class = "alert alert-<%= message_type %>"><%= msg %></div>
      <% end %>
      <%= yield %>
      <% if Rails.env.development? %>
        <%= debug(params) %>
        <p id = "session-correct"><%= "session[:correct]: #{session[:correct]}" %></p>
        <p id = "session-incorrect"><%= "session[:incorrect]: #{session[:incorrect]}" %></p>
      <% end %>
    </div>
  </body>
</html>
